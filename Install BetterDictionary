# Close all instances of Dictionary.app
killall Dictionary

# Check for SIMBL directory
if [ ! -d ~/Library/Application\ Support/SIMBL/Plugins/ ] 
then
#	echo "It seems that SIMBL is not installed on this computer."
#	echo "You can download SIMBL from http://www.culater.net/software/SIMBL/SIMBL.php"
#	exit
	mkdir -p ~/Library/Application\ Support/SIMBL/Plugins
fi


# Remove the existing bundle from SIMBL plugins folder
rm -rf ~/Library/Application\ Support/SIMBL/Plugins/BetterDictionary.bundle

# Copy the bundle to SIMBL plugins folder
cp -r $0/../BetterDictionary.bundle ~/Library/Application\ Support/SIMBL/Plugins/BetterDictionary.bundle

# Run Dictionary.app
open /Applications/Dictionary.app/